<nav class="navbar navbar-default navbar-fixed-top navbar-shadow">
  <div class="container-fluid">

    <!-- Brand and toggle get grouped for better mobile display -->

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <!-- Brand -->

      <div style="margin-right: 10px;">
        <%= image_tag("logo.png", class: 'logo-header') %>
        <span class="trade-mark">TM</span>
      </div>

    </div>


    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><a><strong>Backyard Lion International </strong>
          <span class="sr-only">(current)</span></a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right text-center">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-inline landing-signin'}) do |f| %>
            <%= devise_error_messages! %>
            <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address', :class => 'form-control' %>
            <%= f.password_field :password, :autofocus => true, :placeholder => 'Password', :class => 'form-control' %>


            <% if devise_mapping.rememberable? -%>
                <label class="checkbox"> <%= f.check_box :remember_me %> Remember me </label>
            <% end -%>

            <% if params[:token].present? %>
                <%= hidden_field_tag('token', params[:token]) %>
            <% end %>
            <%= f.submit "Sign in", :class => 'btn btn-primary' %>
        <% end %>

      </ul>
    </div>
  </div>
</nav>
