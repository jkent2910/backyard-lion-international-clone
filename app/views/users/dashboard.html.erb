      <div class="thumbnail text-center">
        <%= fa_icon("address-book-o", class: 'dashboard-icon') %>
        <div class="caption">
          <h3 class="lead">How People Ranked Your Team</h3>
          <h3 class="primary-color">
            <small>Top</small>
            ??%
          </h3>
          <br>
          <button class='btn btn-success'><%= link_to "Try Premium", premium_user_path, :style => 'color:white' %>
            <span class="label label-danger"> NEW</span></button>
        </div>
      </div>
    </div>

    <br>

  </div>

</div>