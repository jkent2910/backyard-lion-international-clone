<div class="container main-container">
  <h3>Users</h3>

  <%= will_paginate %>

  <ul>
    <% @users.each do |user| %>
        <li>
          <strong><%= user.email %></strong>
          <% unless current_user == user %>
              <%= link_to 'Message', new_message_path(to: user.id), class: 'btn btn-default btn-sm' %>
          <% end %>
        </li>
    <% end %>
  </ul>

  <%= will_paginate %>
</div>
